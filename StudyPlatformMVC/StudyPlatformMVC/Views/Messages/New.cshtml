@using System.Web.Mvc
@using StudyPlatformMVC.Models
@model StudyPlatformMVC.ViewModels.MessageNewViewModel
@{
    ViewBag.Title = "Ny besked";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("New", "Messages", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <fieldset>
        <div class="form-group">
            <label class="col-sm-2 control-label">Titel</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Title, new {@class = "form-control", placeholder = "Titel", tabindex = 1})
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Modtagere</label>
            <div class="col-sm-10">
                @Html.ListBoxFor(model => model.SelectedPersons, Model.Persons, new {@class = "form-control", tabindex = 2})
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Tekst</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Text, new {@class = "form-control", placeholder = "Tekst", tabindex = 3})
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </fieldset>
}