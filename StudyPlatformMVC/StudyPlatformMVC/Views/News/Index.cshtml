@using StudyPlatformMVC.Models
@model List<News>   

@{
    ViewBag.Title = "News";
}
@Styles.Render("~/Content/news")


<h2>Nyheder</h2>


<table class="table">
    <thead>
    <td>Titel</td>
    <td>Dato</td>
    </thead>

    <tbody>
        <tr data-toggle="collapse" data-target="#accordion" class="clickable row-odd">
            <td><strong>Nyhed 1</strong></td>
        </tr>
        <tr>
            <td colspan="3">
                
                    @foreach (News news in @Model)
            {
            <tr>
                
                <div id="accordion" class="collapse">

                    @news.Title

                    @news.DateTimePublished

                    @news.Text
                </div>
          </tr>

                    }



                    
                    </td>
                    </tr>
                </tbody>
</table>

@{ Person user = Person.GetByID(1); }
<p>@user.Name</p>



