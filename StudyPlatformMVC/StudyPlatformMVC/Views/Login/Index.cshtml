@model StudyPlatformMVC.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
@Html.BeginForm(){
@Html.ValidationSummary(true, "Login failed. Check your login details.")
<fieldset>
    <div class="form-group">
        <label class="col-sm-2 control-label">Brugernavn</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(model => model.Username, new {@class = "form-control", placeholder = "Brugernavn", tabindex = 1})
            @Html.ValidationMessageFor(model => model.Username)
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Adganskode</label>
        <div class="col-sm-10">
            @Html.PasswordFor(model => model.Password, new {@class = "form-control", placeholder = "Adganskode", tabindex = 2})
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="LOGIN" class="btn btn-primary"/>
        </div>
    </div>
</fieldset>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
</body>
</html>